generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "foreignKeys"
}


enum Role {
  USER
  ADMIN
  SUPERADMIN
}

enum FileType {
  IMAGE
  VIDEO
  AUDIO
  DOCUMENT
}